@using Reservas.Models.ViewModel
@model EditarModuloViewModel
@{
    int IdU = ViewBag.IdU;
}

<h1>Editar Modulos</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ModificarMod">
            @Html.HiddenFor(d=>d.IdModulo)
            <div asp-validation-summary="ModelOnly"class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdModulo" class="control-label"></label>
                <input asp-for="IdModulo" required class="form-control" disabled/>
                <span asp-validation-for="IdModulo" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="InicioMod" class="control-label"></label>
                <input asp-for="InicioMod" required class="form-control"type="time"/>
                <span asp-validation-for="InicioMod" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="FinMod" class="control-label"></label>
                <input asp-for="FinMod" class="form-control"type="time"/>
                <span asp-validation-for="FinMod" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-top:10px">
                 <a type="button" class="btn btn-secondary" asp-controller="Modulo" asp-action="Index" asp-route-IdU=@IdU>Cancelar</a>
                 <input type="submit" value="Modificar" class="btn btn-primary" asp-route-IdU=@IdU/>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}